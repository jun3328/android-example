<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/radioLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="라디오 채널" />

            <TextView
                android:id="@+id/radioMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="메시지" />

        </LinearLayout>

        <Button
            android:id="@+id/registerRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독" />

        <Button
            android:id="@+id/unRegisterRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해지" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TV 채널" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="메시지" />

        </LinearLayout>

        <Button
            android:id="@+id/registerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독" />

        <Button
            android:id="@+id/unRegisterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해지" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/webLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WEB 채널" />

            <TextView
                android:id="@+id/webMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="메시지" />

        </LinearLayout>

        <Button
            android:id="@+id/registerWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독" />

        <Button
            android:id="@+id/unRegisterWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해지" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EDE7F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/newsEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="뉴스를 입력하세요" />

        <Button
            android:id="@+id/newsPublishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발행" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>